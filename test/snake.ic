#include "snake.h"

#include <time.h>

Snake makeSnake() {
        srand(time(NULL));

        char h = makeHead();
        uint8_t t = makeTail();
        Snake s = {h, t};
        return s;
}


#isolate head
#include "snake.h"

char makeHead() {
        return (char)(rand() % 26 + 'A');
}


#isolate tail
#include "snake.h"

uint8_t makeTail() {
        int r = rand();
        return (uint8_t)(r & 0xBF) + 1;
}


#isolate draw
#include "snake.h"

#include <stdio.h>

void drawSnake(Snake s) {
        if (s.t & 0x80) printf("%c", s.h);
        for (int i = 0; i < (s.t & ~0x80); i++) printf("=");
        if (~s.t & 0x80) printf("%c", s.h);
        printf("\n");
}
